{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck":true,
    "typeRoots": ["src/types"]
  },
  "include": ["src/**/*"],
}